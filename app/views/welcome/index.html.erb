<h1>A Cause You Care About</h1>

<p class="lead">Today's Content on <%= @article.issues.map { |issue| link_to issue.topic, issue_path(issue.id)}.html_safe %></p>
<div class="articles">
	  <h2>
	  	<%= link_to @article.title, article %>
	  </h2>
	  <div class="article-info">
		Published <%= @article.created_at.strftime('%b %d, %Y') %>
	  </div>
	  <div class="url">
	  	<%= @article.article_url %><br />
	  </div>
</div>




